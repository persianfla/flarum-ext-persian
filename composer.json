{
    "name": "persianfla/flarum-ext-persian",
    "type": "flarum-extension",
    "description": "Persian language pack.",
    "keywords": ["locale", "farsi"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sajjad Hashemian",
            "email": "wolaws@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/persianfla/flarum-ext-persian/issues",
        "source": "https://github.com/persianfla/flarum-ext-persian"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.5"
    },
    "autoload": {
        "psr-4": {
            "PersianFla\\Persian\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Persian",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#FFF",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flarum-locale": {
            "code": "fa",
            "title": "Persian"
        }
    }
}
